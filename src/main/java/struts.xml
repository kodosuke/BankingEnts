<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="user" namespace="/user" extends="struts-default">

		<interceptors>
			<interceptor name="loginInterceptor"
				class="org.code.interceptors.LoginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login" type="redirect"> /user/login</result>
		</global-results>

		<action name="/*">
			<result> /user/index.html</result>
		</action>

		<action name="login">
			<result> /user/sign.html </result>
		</action>

		<action name="logOutUser" class="org.code.actions.SignUser" method="logOutUser">
			<interceptor-ref name="loginStack" />
		</action>

	</package>
	<include file="api.xml" />
</struts>