<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<constant name="struts.devMode" value="true" />	
	
	<package name="client" namespace="/api" extends="json-default">
	
		<result-types>
	        <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
        
		<interceptors>
			<interceptor name="applicationInterceptor" class="org.code.interceptors.ApplicationInterceptor"/>
			<interceptor-stack name="appStack">
				<interceptor-ref name="applicationInterceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		
		<global-results>
		
			<result name="error" type="json">
				<param name="successCode">400</param>
			</result>
			<result name="success" type="json"/>
		</global-results>
		
		<action name="loginUser" class="org.code.actions.SignUser" method="loginUser">
			<result name="success" type="json"/>
		</action>
		
		<action name="registerUser" class="org.code.actions.SignUser" method="registerUser">
			<result name="success" type="json"/>
		</action>
		
		<action name="readUser" class="org.code.actions.UserAction" method="readUser">
			<interceptor-ref name="appStack"/>
				<result name="success" type="json"/>
		</action>
		
		<action name="changePassword" class="org.code.actions.ChangePasswordAction" method="updatePassword">
			<interceptor-ref name="appStack"/>
				<result name="success" type="json"/>
		</action>
		
		<action name="creditBalance" class="org.code.actions.BankingAction" method="creditBalance">
			<interceptor-ref name="appStack"/>
				
		</action>
		
		<action name="debitBalance" class="org.code.actions.BankingAction" method="debitBalance">
			<interceptor-ref name="appStack"/>
				
		</action>
		
		<action name="transferBalance" class="org.code.actions.TransferAction" method="transferBalance">
			<interceptor-ref name="appStack"/>
				
		</action>
		
		<action name="newBeneficiary" class="org.code.actions.Beneficiaries" method="addBeneficiary">
			<interceptor-ref name="appStack"/>
				<result name="success" type="json"/>
		</action>
		
		<action name="viewBeneficiaries" class="org.code.actions.Beneficiaries" method="getBeneficiaries">
			<interceptor-ref name="appStack"/>
				<result name="success" type="json"/>
		</action>
		
		<action name="viewTransactions" class="org.code.actions.UserAction" method="getTransactions">
			<interceptor-ref name="appStack"/>
				<result name="success" type="json"/>
		</action>
		
	</package>
</struts>